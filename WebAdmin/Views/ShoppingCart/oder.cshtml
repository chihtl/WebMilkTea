@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
@using (Html.BeginForm("CheckOut", "ShoppingCart", FormMethod.Post))
{

    <div class="container" style="background-color: #E48586; padding: 20px; border-radius: 10px;">
        <div class="row justify-content-center">
            <div class="col-md-6" style="background-color: white; padding: 20px; border-radius: 10px;">
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label" style="color: #E48586;">Nhập tên:</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label" style="color: #E48586;">Nhập số điện thoại:</label>
                        <input type="tel" class="form-control" id="phone" name="phone" required />
                    </div>
                    <div class="mb-3">
                        <label for="address" class="form-label" style="color: #E48586;">Nhập địa chỉ giao hàng:</label>
                        <input type="text" class="form-control" id="address" name="address" required />
                    </div>
                    <div class="mb-3">
                        <label for="note" class="form-label" style="color: #E48586;">Ghi chú:</label>
                        <input type="text" class="form-control" id="note" name="note" />
                    </div>
                    <button type="submit" style="background-color: #E48586; color: white; border: none; padding: 10px 20px; cursor: pointer;">Đặt hàng</button>
                </form>
            </div>
        </div>
    </div>
}
