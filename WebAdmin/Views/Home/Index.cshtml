<div class="carousel">
    <div id="carouselExampleIndicators"
         class="carousel slide carousel-fade"
         data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide-to="0"
                    class="active"
                    aria-current="true"
                    aria-label="Slide 1"></button>
            <button type="button"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/images/banner-1.png" class="d-block w-100" alt="..." />
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/banner-2.png" class="d-block w-100" alt="..." />
            </div>
            <div class="carousel-item">
                <img src="~/Content/images/banner-3.png" class="d-block w-100" alt="..." />
            </div>
        </div>
        <button class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next"
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<div class="container">
    <div class="title" bis_skin_checked="1">
        <h2>Categories</h2>
    </div>

    @Html.Partial("~/Views/Product/ProductStyle2Partial.cshtml", homeModel.categories)
    <div class="title" bis_skin_checked="1">
        <h2>Popular Items</h2>
    </div>
    @Html.Partial("~/Views/Product/ProductStyle1Partial.cshtml", homeModel.popularItems)
    <div class="title" bis_skin_checked="1">
        <h2>New Product</h2>
    </div>
    @Html.Partial("~/Views/Product/ProductStyle3Partial.cshtml", homeModel.newProducts)
    <div class="title" bis_skin_checked="1">
        <h2>Topping</h2>
    </div>
    @Html.Partial("~/Views/Product/ProductStyle4Partial.cshtml", homeModel.toppings)




</div>



